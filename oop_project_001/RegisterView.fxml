<Scene xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RegisterController">
    <AnchorPane prefHeight="400.0" prefWidth="600.0">
      <children>
         <Label layoutX="254.0" layoutY="53.0" text="Mini Project">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <Label layoutX="252.0" layoutY="87.0" text="Register Form">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <Label layoutX="82.0" layoutY="162.0" text="User Name" />
         <Label layoutX="88.0" layoutY="226.0" text="Password" />
         <Label layoutX="88.0" layoutY="283.0" text="Verify Password" />
         <TextField fx:id="textfield_username" layoutX="222.0" layoutY="158.0" prefWidth="200.0" />
         <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="49.0" layoutY="31.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@itc_logo.png" />
            </image></ImageView>
         <StackPane layoutX="229.0" layoutY="231.0">
            <children>
               <PasswordField fx:id="passwordfield_password" onKeyTyped="#passwordfield_password_action" prefWidth="200.0" />
               <TextField fx:id="textfield_password" onKeyTyped="#textfield_password_action" prefWidth="200.0" visible="false" />
