         <Label fx:id="label_status_verify_password" layoutX="236.0" layoutY="313.0" prefWidth="200.0" text="Status" />
         <Label layoutX="230.0" layoutY="208.0" prefHeight="18.0" prefWidth="202.0" text="*Password must at least 6 charators" />
         <Label layoutX="222.0" layoutY="140.0" prefHeight="18.0" prefWidth="210.0" text="*User name must at least 6 charators" />
         <Button fx:id="button_back_to_login" layoutX="14.0" layoutY="357.0" mnemonicParsing="false" onAction="#button_back_to_login_action" text="Back to Login" />
      </children></AnchorPane>
